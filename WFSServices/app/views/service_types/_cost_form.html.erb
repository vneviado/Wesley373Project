<div class="container">
    <div class="card">
        <div class="card-content is-light-grey">
                <%= simple_form_for(@service) do |f| %>
                    <%= f.error_notification %>
                        <div class="field">
                            <div class="control">
                                <%= f.input_field :unit_cost, label_html: { class: 'active' }, wrapper: false %>
                            </div>
                        </div>
                        <div class="field">
                            <div class="control">
                                <%= f.input_field :unit_rate, label_html: { class: 'active' }, wrapper: false %>
                            </div>
                        </div>
                        <div class="field">
                            <div class="control">
                                <%= f.input_field :unit_rate, label_html: { class: 'active' }, wrapper: false %>
                            </div>
                        </div>
                        <div class="field">
                            <div class="control">
                                <%= f.input_field :unit_rate, label_html: { class: 'active' }, wrapper: false %>
                            </div>
                        </div>
                        <div class="field">
                            <div class="control">
                                <%= f.input_field :unit_rate, label_html: { class: 'active' }, wrapper: false %>
                            </div>
                        </div>

                        <%= f.input :service_type_id, as: :hidden, input_html: { value: @service.id }, wrapper:false %>
                        <%= f.input :created_by, as: :hidden, input_html: { value: current_user.username }, wrapper:false %>
                        <%= f.input :created_at, as: :hidden, input_html: { value: Date.current }, wrapper:false %>
                <% end %>
            </div>
        </div>
    </div>
</div>