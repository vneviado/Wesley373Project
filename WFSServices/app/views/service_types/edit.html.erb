<div class="container">
    <div class="card">
        <div class="card-content is-light-grey">
                <%= simple_form_for(@service_type) do |f| %>
                    <%= f.error_notification %>
                        <div class="field">
                            <div class="control">
                                <%= f.input :name, label_html: { class: 'active' }, wrapper: false %>
                            </div>
                        </div>
                        <div class="field">
                            <div class="control">
                                <%= f.input :staff, label_html: { class: 'active' }, wrapper: false %>
                            </div>
                        </div>
                        <div class="field">
                          <div class="control">
                              <%= f.input :unit_cost, label_html: { class: 'active' }, wrapper: false %>
                          </div>
                        </div>
                        <div class="field">
                            <div class="control">
                                <%= f.input :unit_rate, label_html: { class: 'active' }, wrapper: false %>
                            </div>
                        </div>
                        <div class="field">
                            <div class="control">
                                <%= f.input :avg_los, label_html: { class: 'active' }, wrapper: false %>
                            </div>
                        </div>
                        <div class="field">
                            <div class="control">
                                <%= f.input :rev_los, label_html: { class: 'active' }, wrapper: false %>
                            </div>
                        </div>
                        <div class="field">
                            <div class="control">
                                <%= f.input :frequency, label_html: { class: 'active' }, wrapper: false %>
                            </div>
                        </div>
                        <%= f.input :updated_at, as: :hidden, input_html: { value: Date.current }, wrapper:false %>
                  <%= f.button :submit %>
                <% end %>
            </div>
        </div>
    </div>

  </div>
</div>

<%= render 'form_edit', service_type: @service_type %>

<div class="container">
  <div class="row columns">
    <div class="column">
    <br>
      <%= link_to 'Back', services_path, class: "button is-info is-rounded" %>
    </div>
  </div>
</div>