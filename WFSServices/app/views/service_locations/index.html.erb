<p id="notice"><%= notice %></p>

<h1>Service Locations</h1>

<table>
  <thead>
    <tr>
      <th>Service</th>
      <th>Location</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @service_locations.each do |service_location| %>
      <tr>
        <td><%= service_location.service %></td>
        <td><%= service_location.location %></td>
        <td><%= link_to 'Show', service_location %></td>
        <td><%= link_to 'Edit', edit_service_location_path(service_location) %></td>
        <td><%= link_to 'Destroy', service_location, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

