<div class="container">     
      <div class="row columns">
        <div class="column">
          <br><br>
          <p class="title is-4 no-padding">Log in</p>
        </div>
      </div>
    
    <div class="card large">
    <div class="card-content is-light-grey">

      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          
          <div class="field">
            <div class="control">  
              <%= f.input :username, label_html: { class: 'active' }, wrapper: false,  wrapper_html: { class: 'input' } %>
            </div>
          </div>

          <div class="field">
            <div class="control">  
              <%= f.input :email, label_html: { class: 'active' }, wrapper: false,  wrapper_html: { class: 'input' }, required: false, autofocus: true, input_html: { autocomplete: "email" } %>
            </div>
          </div>

          <div class="field">
            <div class="control">  
              <%= f.input :password,
                      required: false,
                      input_html: { autocomplete: "current-password" }, label_html: { class: 'active' }, wrapper: false,  wrapper_html: { class: 'input' } %>
            </div>
          </div>

          <div class="field">
            <div class="control">
              <div class="tickbox">
                <%= f.input :remember_me, wrapper: false, label_html: { class: 'active' }, wrapper_html: { class: 'input' }, as: :boolean if devise_mapping.rememberable? %>
              </div>
            </div>
          </div>

          <%= f.button :submit, "Log in" %>

      <% end %>

      <%= render "devise/shared/links" %>

    </div>
  </div>
</div>