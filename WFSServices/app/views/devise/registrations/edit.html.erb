<div class="container">
  <div class="row columns">
    <div class="column">
      <br/>
      <p class="title is-4 no-padding">Edit <%= resource_name.to_s.humanize %></p>
    </div>
  </div>
</div>

<div class="container">
  <div class="card large">
    <div class="card-content is-light-grey">
      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs">
          <div class="field">
            <div class="control">
              <%= f.input :email, required: true, autofocus: true, label_html: { class: 'active' }, wrapper: false,  wrapper_html: { class: 'input' } %>
            </div>
          </div>

          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
          <% end %>

          <div class="field">
            <div class="control">
              <%= f.input :username, label_html: { class: 'active' }, wrapper: false,  wrapper_html: { class: 'input' } %>
            </div>
          </div>

          <div class="field">
            <div class="control">
              <%= f.input :password, label_html: { class: 'active' }, wrapper: false, wrapper_html: { class: 'input' }, input_html: { autocomplete: "new-password" } %>
            </div>
          </div>

          <div class="field">
            <div class="control">
              <%= f.input :password_confirmation, label_html: { class: 'active' }, wrapper: false, wrapper_html: { class: 'input' }, input_html: { autocomplete: "new-password" } %>
            </div>
          </div>

          <div class="field">
            <div class="control">
              <%= f.input :current_password, required: true, label_html: { class: 'active' }, wrapper: false, wrapper_html: { class: 'input' }, input_html: { autocomplete: "current-password" } %>
            </div>
          </div>
        </div>

        <%= f.input :updated_at, as: :hidden, input_html: { value: Date.current }, wrapper:false %>

        <br/>
        <div class="form-actions">
          <%= f.button :submit %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<div class="container">
  <div class="row columns">
    <div class="column">
      <br>
      <%= link_to "Cancel My Account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "button is-info is-rounded" %>

      <%= link_to "Back", :back, class: "button is-info is-rounded" %>
    </div>
  </div>
</div>
