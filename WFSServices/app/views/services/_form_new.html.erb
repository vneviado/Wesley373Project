<div class="container">
    <div class="card">
        <div class="card-content is-light-grey">
                <%= simple_form_for(@service) do |f| %>
                    <%= f.error_notification %>

                        <div class="field">
                            <div class="control">
                                <%= f.input :name, label_html: { class: 'active' }, wrapper: false,  wrapper_html: { class: 'input' } %>
                            </div>
                        </div>
                         <div class="field">
                            <div class="control">
                                <%= f.input :category_id, collection: Category.alphabetical.to_a, wrapper: false %>
                            </div>
                        </div>
                        <div class="field">
                            <div class="control">
                                <%= f.input :web_address, :as => :url, label_html: { class: 'active' }, wrapper: false %>
                            </div>
                        </div>
                        
                         <div class="field">
                            <div class="control">
                                <% loc = Array["1", "2", "3", "4", "5"] %>
                                <%= f.input :level_of_care, collection: loc, include_blank: true, wrapper: false %>
                            </div>
                        </div>

                         <div class="field">
                            <div class="control">
                                <% aos = Array["Adult", "Child", "Intellectual and Developmental Disabilities", "Older Adult"] %>
                                <%= f.input :array_of_services, collection: aos, include_blank: true, wrapper: false %>
                            </div>
                        </div>

                         <div class="field">
                            <div class="control">
                                <% me = Array["Older Adult Services", "Family Support Services", "Child/Family 
                                    Behavioral Health", "Educational/School Services", "Behavioral Health & Recovery",
                                    "Intellectual & Developmental Disabilities", "Central Access/Community Programs", 
                                    "Psychiatric Services", "Outpatient Services"] %>
                                <%= f.input :microenterprise, collection: me, include_blank: true, wrapper: false %>
                            </div>
                        </div>

                        <div class="field">
                            <div class="control">
                                <%= f.input :description, input_html: { class: 'textarea' }, label_html: { class: 'active' }, wrapper: false %>
                            </div>
                        </div>
                        <div class="field">
                            <div class="control">
                                <%= f.input :philosophy, input_html: { class: 'textarea' }, label_html: { class: 'active' }, wrapper: false %>
                            </div>
                        </div>
                        <div class="field">
                            <div class="control">
                                <%= f.input :entrance_criteria, label_html: { class: 'active' }, wrapper: false %>
                            </div>
                        </div>
                        <div class="field">
                            <div class="control">
                                <%= f.input :exclusion_criteria, label_html: { class: 'active' }, wrapper: false %>
                            </div>
                        </div>
                        <div class="field">
                            <div class="control">
                                <%= f.input :exit_criteria, label_html: { class: 'active' }, wrapper: false %>
                            </div>
                        </div>
                        <div class="field">
                            <div class="control">
                                <%= f.input :average_length_of_stay, label_html: { class: 'active' }, wrapper: false %>
                            </div>
                        </div>
                        <div class="field">
                            <div class="control">
                                <%= f.input :referral_process, input_html: { class: 'textarea' }, label_html: { class: 'active' }, wrapper: false %>
                            </div>
                        </div>
                        <div class="field">
                            <div class="control">
                                <%= f.input :matching_elements, input_html: { class: 'textarea' }, label_html: { class: 'active' }, wrapper: false %>
                            </div>
                        </div>
                        
                        <div class="field">
                            <div class="control">
                                <%= f.input :payment_insurance, input_html: { class: 'textarea' }, label_html: { class: 'active' }, wrapper: false %>
                            </div>
                        </div>

                        <%= f.input :created_by, as: :hidden, input_html: { value: current_user.username }, wrapper:false %>

                        <%= f.input :created_at, as: :hidden, input_html: { value: Date.current }, wrapper:false %>
                        
                    <%= f.button :submit %>
                <% end %>
            </div>
        </div>
    </div>
</div>