<p id="notice"><%= notice %></p>

<h1>Contacts</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Work number</th>
      <th>Phone number</th>
      <th>Street 1</th>
      <th>City 1</th>
      <th>Zipcode 1</th>
      <th>Street 2</th>
      <th>City 2</th>
      <th>Zipcode 2</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @contacts.each do |contact| %>
      <tr>
        <td><%= contact.name %></td>
        <td><%= contact.work_number %></td>
        <td><%= contact.phone_number %></td>
        <td><%= contact.street_1 %></td>
        <td><%= contact.city_1 %></td>
        <td><%= contact.zipcode_1 %></td>
        <td><%= contact.street_2 %></td>
        <td><%= contact.city_2 %></td>
        <td><%= contact.zipcode_2 %></td>
        <td><%= link_to 'Show', contact %></td>
        <td><%= link_to 'Edit', edit_contact_path(contact) %></td>
        <td><%= link_to 'Destroy', contact, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

