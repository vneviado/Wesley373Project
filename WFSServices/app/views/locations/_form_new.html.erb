<div class="container">
  <div class="card large">
    <div class="card-content is-light-grey">

      <%= simple_form_for(@location) do |f| %>
              <%= f.error_notification %>

              <div class="field">
                <div class="control">
                  <%= f.input :name, label_html: { class: 'active' }, wrapper: false,  wrapper_html: { class: 'input' } %>
                </div>
              </div>

              <div class="field">
                <div class="control">
                  <%= f.input :photo, label_html: {class: 'active' }, wrapper: false, wrapper_html: { class: 'input' } %>
                </div>
              </div>

              <div class="field">
                <div class="control">
                  <%= f.input :phone_number, label_html: { class: 'active' }, wrapper: false,  wrapper_html: { class: 'input' } %>
                </div>
              </div>

              <div class="field">
                <div class="control">
                  <%= f.input :street, label_html: { class: 'active' }, wrapper: false,  wrapper_html: { class: 'input' } %>
                </div>
              </div>

              <div class="field">
                <div class="control">
                  <%= f.input :city, label_html: { class: 'active' }, wrapper: false,  wrapper_html: { class: 'input' } %>
                </div>
              </div>

              <div class="field">
                <div class="control">
                  <%= f.input :zipcode, label_html: { class: 'active' }, wrapper: false,  wrapper_html: { class: 'input' } %>
                </div>
              </div>

              <div class="field">
                <div class="control">
                  <%= f.input :map_link, label_html: { class: 'active' }, wrapper: false,  wrapper_html: { class: 'input' } %>
                </div>
              </div>

              <div class="field">
                <div class="control">
                  <%= f.input :created_by, label_html: { class: 'active' }, wrapper: false,  wrapper_html: { class: 'input' } %>
                </div>
              </div>

              <%= f.input :created_at, as: :hidden, input_html: { value: Date.current }, wrapper:false %>

              <%= f.button :submit %>

          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
