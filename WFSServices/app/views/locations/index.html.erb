
<section class="hero">
  <div class="hero-body">
    <div class="container">
      <h1 class="title">Locations</h1>
      <br/>
    </div>
<p id="notice"><%= notice %></p>



<h1>Locations</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Phone number</th>
      <th>Street</th>
      <th>City</th>

      <th>Created by</th>
      <th>Updated by</th>

      <th>Zipcode</th>

      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    
    <% @locations.each do |location| %>
      <div class="container">
        <h3><%= link_to location.name, location %></h3>

        <%= location.street %>, <%= location.city %> PA, <%= location.zipcode %><br/>

        <%= link_to 'Edit', edit_location_path(location) %>
        <%= link_to 'Destroy', location, method: :delete, data: { confirm: 'Are you sure?' } %>
        <br/><br/>
      </div>
    <% end %>
    <%= link_to 'New Location', new_location_path %>
  </div>
</section>
